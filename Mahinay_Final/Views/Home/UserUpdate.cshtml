
@{
    ViewBag.Title = "UserUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var User = (IEnumerable<user>)ViewData["User"];
}

<style>
    h2 {
        text-align: center;
        margin: 100px 10px 50px;
        font-weight: 600;
        color: #ff6a00;
    }

    .form-group {
        margin-bottom: 25px;
        display: flex;
    }

    .form-control {
        color: #222222;
        background-color: var(--background);
        border-radius: 5px;
        height: 35px;
    }

    .form-group label {
        font-weight: 600;
    }

    .btn-primary {
        font-size: 20px;
        background-color: #3e0bce;
        color: #fff;
        border: 0;
        border-radius: 10px;
        height: 8%;
    }

    form {
        justify-content: center;
        align-items: center;
        width: 320px;
        margin: auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 10px;
    }



    .form-group {
        display: flex;
        flex-direction: column;
        margin-bottom: 15px;
    }

    label {
        margin-bottom: 8px;
    }

    .btn-primary {
        margin-top: 15px;
    }
</style>

<h2>Update User</h2>
@{
    foreach (var use in User)
    {

        <form method="post" action="Update">
            <div class="form-group">
            <input type="hidden" value="@use.userId" name="id" />
                <label for="exampleInputEmail1">Email address</label>
                <input type="text" name="new_firstname" class="form-control"  placeholder="Enter First  Name" value="@use.firstname">


            </div>  <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="text" class="form-control" name="new_lastname" placeholder="Enter Last Name" value="@use.lastname">

            </div>  <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" name="new_email"  placeholder="Enter email" value="@use.email">

            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" name="new_password" placeholder="Password" value="@use.password">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>


    }
}